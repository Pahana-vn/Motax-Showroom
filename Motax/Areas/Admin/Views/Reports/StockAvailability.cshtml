@model IEnumerable<Motax.ViewModels.StockAvailabilityViewModel>

@{
    ViewData["Title"] = "Stock Availability Report";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">Stock Availability Report </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["error"]
                        </div>
                    }

                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Car Name</th>
                                <th>Brand Name</th>
                                <th>Dealer Name</th>
                                <th>Year</th>
                                <th>Price</th>
                                <th>Warehouse Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CarName</td>
                                    <td>@item.BrandName</td>
                                    <td>@item.DealerName</td>
                                    <td>@item.Year</td>
                                    <td>@item.Price</td>
                                    <td>@item.WarehouseLocation</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>