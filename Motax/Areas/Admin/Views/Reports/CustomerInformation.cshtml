@model IEnumerable<Motax.ViewModels.CustomerInformationViewModel>
@{
    ViewData["Title"] = "CustomerInformation";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">Customer Information Report</div>
            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["error"]
                        </div>
                    }

                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Date of Birth</th>
                                <th>Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Username</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Address</td>
                                    <td>@item.Dob?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Gender</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
