@model IEnumerable<Motax.ViewModels.AllotmentDetailsViewModel>
@{
    ViewData["Title"] = "AllotmentDetails";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">Allotment Details Report</div>
            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["error"]
                        </div>
                    }
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Car Name</th>
                                <th>Dealer Name</th>
                                <th>Dealer Address</th>
                                <th>Dealer Phone</th>
                                <th>Scheduled Pickup Date</th>
                                <th>Pickup Location</th>
                                <th>Customer Contact</th>
                                <th>Is Confirmed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CarName</td>
                                    <td>@item.DealerName</td>
                                    <td>@item.DealerAddress</td>
                                    <td>@item.DealerPhone</td>
                                    <td>@item.ScheduledPickupDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.PickupLocation</td>
                                    <td>@item.CustomerContact</td>
                                    <td>@item.IsConfirmed</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
