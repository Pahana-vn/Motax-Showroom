@model IEnumerable<Motax.ViewModels.OrderDetailViewModel>

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}


@if (!Model.Any())
{
    <p>No order details found</p>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h3>Order Detail</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Order ID</th>
                                    <td>@item.Id</td>
                                </tr>
                                <tr>
                                    <th>Dealer Name</th>
                                    <td>@item.DealerName</td>
                                </tr>
                                <tr>
                                    <th>Car Name</th>
                                    <td>@item.CarName</td>
                                </tr>
                                <tr>
                                    <th>Discount</th>
                                    <td>@item.Discount</td>
                                </tr>
                                <tr>
                                    <th>Quantity</th>
                                    <td>@item.Quantity</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>@item.Price</td>
                                </tr>
                                <tr>
                                    <th>Total Amount</th>
                                    <td>@item.TotalAmount</td>
                                </tr>
                                <tr>
                                    <th>User Name</th>
                                    <td>@item.Username</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>@item.Address</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>@item.Phone</td>
                                </tr>
                                <tr>
                                    <th>Order Date</th>
                                    <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                                <tr>
                                    <th>Delivery Date</th>
                                    <td>@item.DeliveryDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                            </table>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                            </form>
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
