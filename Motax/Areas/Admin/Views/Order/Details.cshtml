@model IEnumerable<Motax.ViewModels.OrderDetailViewModel>
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

@if (!Model.Any())
{
    <p>No order details found</p>
}
else
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Order Details</div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table id="file-export" class="table table-bordered text-nowrap w-100">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Dealer Name</th>
                                    <th>Car Name</th>
                                    <th>DisCount</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total Amount</th>
                                    <th>User Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Order Date</th>
                                    <th>Delivery Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.DealerName</td>
                                        <td>@item.CarName</td>
                                        <td>@item.Discount</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price</td>
                                        <td>@item.TotalAmount</td>
                                        <td>@item.Username</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.OrderDate</td>
                                        <td>@item.DeliveryDate</td>
                                        <td>
                                            <a class="btn btn-icon btn-sm btn-info-transparent rounded-pill" asp-action="Edit" asp-controller="Order" asp-route-id="@item.Id"> <i class="ri-edit-line"></i> </a>

                                            <form asp-action="Delete" asp-controller="Order" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-icon btn-sm btn-danger-transparent rounded-pill" onclick="return confirm('Are you sure you want to delete this order?');">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
