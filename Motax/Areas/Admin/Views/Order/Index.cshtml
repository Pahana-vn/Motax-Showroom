@model IEnumerable<Motax.Models.Order>
@{
    ViewData["Title"] = "Index order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">List Order</div>
                <div class="card-title">
                    <a class="btn btn-success label-btn" asp-action="Create" asp-controller="Order"> <i class="ri-chat-smile-line label-btn-icon me-2"></i> Add Order</a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Order Code</th>
                                <th>Order Date</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Check vehicle</th>
                                <th>Detail</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderCode</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.TotalAmount</td>
                                    <td>
                                        @if (item.OrderStatus != null)
                                        {
                                            <span class="@item.OrderStatus.Status.ToLower()">@item.OrderStatus.Status</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">No Status</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details2" asp-controller="Order" asp-route-id="@item.Id">Data Car</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-controller="Order" asp-route-id="@item.Id">Detail</a>
                                    </td>
                                    <td>
                                        <form asp-action="Delete" asp-controller="Order" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-icon btn-sm btn-danger-transparent rounded-pill" onclick="return confirm('Are you sure you want to delete this order?');">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

