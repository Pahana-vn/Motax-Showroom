@model IEnumerable<Motax.Models.Order>
@{
    ViewData["Title"] = "Index2 order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">List Order </div>
                <div class="card-title">
                    <a class="btn btn-success label-btn" asp-action="Create" asp-controller="Order"> <i class="ri-chat-smile-line label-btn-icon me-2"></i> Add Order</a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Order Code</th>
                                <th>Name customer</th>
                                <th>Delivery Date</th>
                                <th>Total Amount</th>
                                <th>Check vehicle</th>
                                <th>Detail</th>
                                <th>Register Car</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderCode</td>
                                    <td>@item.Username</td>
                                    <td>@item.DeliveryDate</td>
                                    <td>@item.TotalAmount</td>
                                    <td>
                                        <a class="" asp-action="Details2" asp-controller="Order" asp-route-id="@item.Id"> <span class="btn btn-primary">Data Car</span></a>
                                    </td>
                                    <td>
                                        <a class="" asp-action="Details" asp-controller="Order" asp-route-id="@item.Id"> <span class="btn btn-primary">Detail</span></a>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Register" asp-controller="CarRegistration" asp-route-orderId="@item.Id">Register Car</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-icon btn-sm btn-info-transparent rounded-pill" asp-action="Edit" asp-controller="Order" asp-route-id="@item.Id"> <i class="ri-edit-line"></i> </a>

                                        <form asp-action="Delete" asp-controller="Order" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-icon btn-sm btn-danger-transparent rounded-pill" onclick="return confirm('Are you sure you want to delete this category?');">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
