@model Motax.ViewModels.GoodsReceiptViewModel

@{
    ViewData["Title"] = "Create Goods Receipt";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBackend.cshtml";
}

<div class="col-xl-12" style="margin-top:20px;">
    <div class="card custom-card">
        <div class="card-header justify-content-between">
            <div class="card-title">
                Create Goods Receipt
            </div>
        </div>
        <div class="card-body" style="margin:10px;">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="CarId" />
                <input type="hidden" asp-for="DealerId" />

                <div class="col-12">
                    <label class="form-label">VIN</label>
                    <input asp-for="VIN" class="form-control" readonly />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Receipt Date</label>
                    <input asp-for="ReceiptDate" class="form-control" />
                    <span asp-validation-for="ReceiptDate" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Receipt Details</label>
                    <textarea asp-for="ReceiptDetails" class="form-control" readonly></textarea>
                    <span asp-validation-for="ReceiptDetails" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
