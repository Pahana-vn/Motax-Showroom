@model IEnumerable<CarRegistration>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Shipper/Views/Shared/_LayoutBackendShipper.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">List Car Registration </div> -------
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Customer Name</th>
                                <th>Registration Number</th>
                                <th>License Plate</th>
                                <th>Insurance Details</th>
                                <th>Driver's License Number</th>
                                <th>Detail</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.RegistrationNumber</td>
                                    <td>@item.LicensePlate</td>
                                    <td>@item.InsuranceDetails</td>
                                    <td>@item.DriverLicenseNumber</td>
                                    <td>
                                        <a asp-action="Detail" asp-controller="CarRegistration" asp-route-id="@item.Id" class="">
                                            <span class="btn btn-primary"> View Invoice</span>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-icon btn-sm btn-info-transparent rounded-pill" asp-action="Edit" asp-controller="CarRegistration" asp-route-id="@item.Id"> <i class="ri-edit-line"></i> </a>

                                        <form asp-action="Delete" asp-controller="CarRegistration" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-icon btn-sm btn-danger-transparent rounded-pill" onclick="return confirm('Are you sure you want to delete this category?');">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

