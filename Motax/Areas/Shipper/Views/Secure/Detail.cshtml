@model Motax.ViewModels.AccountDetailStaffVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Shipper/Views/Shared/_LayoutBackendShipper.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Account Detail</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/Images/Account/Avatar/@Model.Image" class="img-fluid" alt="User Image" />
                }
                else
                {
                    <img src="~/Images/Account/Avatar/default-avatar.png" class="img-fluid" alt="User Image" />
                }
            </div>
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tr>
                        <th>Username</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Date of Birth</th>
                        <td>@Model.Dob?.ToString("yyyy-MM-dd")</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>@Model.Gender</td>
                    </tr>
                    
                    <tr>
                        <th>Status</th>
                        <td>@Model.Status</td>
                    </tr>
                </table>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>

