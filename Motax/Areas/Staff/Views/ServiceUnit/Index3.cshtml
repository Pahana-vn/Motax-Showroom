@model IEnumerable<Motax.Models.ServiceUnit>
@{
    ViewData["Title"] = "Index3 ServiceUnit";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutBackendStaff.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">List ServiceUnit</div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Car</th>
                                <th>Dealer</th>
                                <th>Vehicle Preparation Day</th>
                                <th>Service Details</th>
                                <th>Pickup Date</th>
                                <th>Is Completed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Car?.Name</td>
                                    <td>@item.Dealer?.Name</td>
                                    <td>@item.ServiceDate.ToShortDateString()</td>
                                    <td>@item.ServiceDetails</td>
                                    <td>@item.PickupDate?.ToShortDateString()</td>
                                    <td>@item.IsCompleted</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

