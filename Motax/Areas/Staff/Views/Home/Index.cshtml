@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutBackendStaff.cshtml";
}

<style>
    .dashboard-container {
        text-align: center;
        margin-top: 50px;
    }

    .welcome-message {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .dashboard-image {
        max-width: 100%;
        height: auto;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="dashboard-container">
    <div class="welcome-message">
        <h2>Welcome to Your Staff Dashboard</h2>
        <p>We are glad to have you on our team. Your dedication and hard work are greatly appreciated.</p>
    </div>
    <img src="https://us.123rf.com/450wm/nd3000/nd30001711/nd3000171102471/90030558-colleagues-sitting-at-office-desk.jpg?ver=6" alt="Staff at Office Desk" class="dashboard-image" />
</div>
