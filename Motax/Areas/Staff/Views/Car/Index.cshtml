@model IEnumerable<Motax.Models.Car>
@{
    ViewData["Title"] = "Index Car Admin";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutBackendStaff.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">List Car </div>
                <div class="card-title">
                    <a class="btn btn-success label-btn" asp-action="Create" asp-controller="Car"> <i class="ri-chat-smile-line label-btn-icon me-2"></i> Add Car</a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="file-export" class="table table-bordered text-nowrap w-100">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name Car</th>
                                <th>Code Vin</th>
                                <th>Condition</th>
                                <th>Price</th>
                                <th>Price Type</th>
                                <th>Availability</th>
                                <th>Transmission</th>
                                <th>Detail</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Images/Car/Single/@item.ImageSingle" width="150px" height="100px" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Vin</td>
                                    <td>@item.Condition</td>
                                    <td>@item.Price$</td>
                                    <td>@item.PriceType</td>
                                   
                                    <td>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="text text-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="text text-danger">Not Available</span>
                                        }
                                    </td>
                                    <td>
                                        @item.Transmission
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-controller="Car" asp-route-id="@item.Id">Data Car</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-icon btn-sm btn-info-transparent rounded-pill" asp-action="Edit" asp-controller="Car" asp-route-id="@item.Id"> <i class="ri-edit-line"></i> </a>

                                        <form asp-action="Delete" asp-controller="Car" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-icon btn-sm btn-danger-transparent rounded-pill" onclick="return confirm('Are you sure you want to delete this car?');">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
