@model Motax.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-area py-120">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="https://thietkenha.pro/images/stories/showroom/showroom-xe-hoi-1.jpg" alt="Car Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <div class="login-form">
                    <div class="login-header">
                        <img src="~/Frontend/assets/img/logo/logo.png" alt="">
                        <p>Create your motex account</p>
                    </div>

                    <form asp-action="Register" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>User Name</label>
                            <input asp-for="Username" class="form-control" placeholder="Your Name">
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>

                        <div class="form-group">
                            <label>Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Your Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Your Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="Phone" class="form-control" placeholder="Your Phone">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>

                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input asp-for="Dob" type="date" class="form-control" placeholder="Your Date of Birth">
                            <span class="text-danger" asp-validation-for="Dob"></span>
                        </div>

                        <div class="form-group">
                            <label>Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Gender"></span>
                        </div>

                        <div class="form-group">
                            <label>Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Your Address">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>

                        <div class="form-group">
                            <label class="">Image</label>
                            <input asp-for="Image" class="form-control" placeholder="Your Avatar">
                            <span asp-validation-for="Image" class="text-danger"></span>
                            <img id="imgpreview" class="pt-2" />
                        </div>

                        <div class="form-check form-group">
                            <input class="form-check-input" type="checkbox" value="" id="agree">
                            <label class="form-check-label" for="agree">
                                I agree with the <a href="#">Terms Of Service.</a>
                            </label>
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="theme-btn"><i class="far fa-paper-plane"></i> Register</button>
                        </div>
                    </form>
                    <div class="login-footer">
                        <p>Already have an account? <a asp-action="Login" asp-controller="Secure">Login.</a></p>
                        <div class="social-login">
                            <p>Continue with social media</p>
                            <div class="social-login-list">
                                <a asp-action="SignInFacebook" asp-controller="Auth"><i class="fab fa-facebook-f"></i></a>
                                <a asp-action="SignInGoogle" asp-controller="Auth"><i class="fab fa-google"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

