@model Motax.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-area py-120" style="background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTeBwBOG1sd8YJ5oC4jo8a_pkiFRns-W9rPuw&s') no-repeat center center; background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="https://thietkenha.pro/images/stories/showroom/showroom-xe-hoi-1.jpg" alt="Car Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <div class="login-form">
                    <div class="login-header">
                        <img src="~/Frontend/assets/img/logo/logo.png" alt="">
                        <p>Create your motex account</p>
                    </div>
                    @{
                        if (TempData["error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["error"]</div>
                        }
                    }
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>User Name</label>
                            <input asp-for="UserName" class="form-control" placeholder="Your Name">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>

                        

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Your Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>


                        <div class="d-flex justify-content-between mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value ="" id="remember">
                                <label class="form-check-label" for="remember">
                                    Remember Me
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" asp-controller="Secure" class="forgot-pass">Forgot Password?</a>
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="theme-btn"><i class="far fa-paper-plane"></i> Login</button>
                        </div>
                    </form>
                    <div class="login-footer">
                        <div class="social-login">
                            <p>Continue with social media</p>
                            <div class="social-login-list">
                                <a asp-action="SignInFacebook" asp-controller="Auth"><i class="fab fa-facebook-f"></i></a>
                                <a asp-action="SignInGoogle" asp-controller="Auth"><i class="fab fa-google"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
