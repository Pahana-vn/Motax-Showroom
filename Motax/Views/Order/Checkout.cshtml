@model Motax.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-breadcrumb" style="background: url('path_to_background_image.jpg') no-repeat center center; background-size: cover;">
    <div class="container">
        <h2 class="breadcrumb-title">Shop Checkout</h2>
        <ul class="breadcrumb-menu">
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="active">Shop Checkout</li>
        </ul>
    </div>
</div>

<div class="shop-checkout py-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="checkout-widget">
                    <h4 class="checkout-widget-title">Billing Information</h4>
                    <div class="checkout-form">
                        <form>
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>User Name</label>
                                        <input type="text" class="form-control" value="@Model.User.Username" readonly>
                                    </div>
                                </div>


                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" value="@Model.User.Email" readonly>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="text" class="form-control" value="@Model.User.Phone" readonly>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Gender</label>
                                        <input type="text" class="form-control" value="@Model.User.Gender" readonly>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" class="form-control" value="@Model.User.Address" readonly>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

                <div class="checkout-widget">
                    <h4 class="checkout-widget-title">Car Details</h4>
                    <div class="checkout-form">

                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Car Name</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Name" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Body Type</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.BodyType" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Mileage</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Mileage" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Transmission</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Transmission" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Condition</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Condition" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Model</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Year" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>FuelType</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.FuelType" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Color</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Color" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Doors</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Doors" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Cylinders</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Cylinders" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>EngineSize</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.EngineSize" readonly>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Price" readonly>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>PriceType</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.PriceType" readonly>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>DriverAirbag</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.DriverAirbag" readonly>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Code Vin</label>
                                    <input type="text" class="form-control" value="@Model.CarDetails.Vin" readonly>
                                </div>
                            </div>
                        </div>
                        <!-- Add more car details as needed -->
                    </div>
                </div>

            </div>

            <div class="col-lg-4">

                <div class="checkout cart-summary">
                    <h4 class="mb-30">Cart Summary</h4>
                    <ul>
                        <li><strong>Product Qty:</strong> <span>1</span></li>
                        <li><strong>Shipping Cost:</strong> <span>Free</span></li>
                        <li><strong>Discount:</strong> <span>$0.00</span></li>
                        <li><strong>Warehouse fees 1%:</strong> <span>@(Model.Price * 0.01)</span></li>
                        <li><strong>Sub Total:</strong> <span>@Model.Price</span></li>
                        <li class="cart-total"><strong>Total Pay:</strong> <span>@(Model.Price + (Model.Price * 0.01))</span></li>
                    </ul>
                    <div class="text-end mt-40">
                        <form asp-action="CreateOrder" asp-controller="Order" method="post">
                            <input type="hidden" name="UserId" value="@Model.User.Id" />
                            <input type="hidden" name="CarId" value="@Model.CarDetails.Id" />
                            <input type="hidden" name="TotalPrice" value="@(Model.Price + (Model.Price * 0.10))" />
                            <button type="submit" class="theme-btn">Confirm order creation<i class="fas fa-arrow-right"></i></button>
                        </form>
                    </div>
                </div>

                <div class="checkout-widget">
                    <h4 class="checkout-widget-title">Financing Calculator</h4>
                    <div class="calculator-form">
                        <form asp-action="Calculate" asp-controller="Order" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="Price" placeholder="$ Price" value="@Model.Price">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Rate" placeholder="% Rate">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="LoanPeriod" placeholder="Loan Period">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="DownPayment" placeholder="$ Down Payment">
                            </div>
                            <button type="submit" class="theme-btn">Calculate Now<i class="fas fa-arrow-right-long"></i></button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

