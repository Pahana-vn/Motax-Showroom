@{
    ViewData["Title"] = "Order Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .success-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
        background-color: #f9f9f9;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .success-container h1 {
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .success-container p {
            font-size: 18px;
            line-height: 1.6;
            color: #555;
            margin-bottom: 20px;
        }

        .success-container .discount-note {
            font-weight: bold;
            color: #d32f2f;
        }

        .success-container .wish {
            margin-top: 30px;
            font-style: italic;
            color: #777;
        }

        .success-container .company-name {
            font-weight: bold;
            color: #333;
        }
</style>

<div class="success-container">
    <h1>Thank You for Your Order!</h1>
    <p>Your payment has been successfully processed.</p>
    <p>Thank you for shopping with us. We appreciate your business and hope you enjoy your purchase.</p>
    <p class="discount-note">Order more items and get special discounts!</p>
    <p>We look forward to serving you again.</p>
    <p class="wish">Best wishes,</p>
    <p class="company-name">Motax Hải Bánh</p>
</div>
