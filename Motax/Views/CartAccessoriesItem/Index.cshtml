@model IEnumerable<Motax.ViewModels.CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-breadcrumb" style="background: url(assets/img/breadcrumb/01.jpg)">
    <div class="container">
        <h2 class="breadcrumb-title">Shop Cart</h2>
        <ul class="breadcrumb-menu">
            <li><a href="index-2.html">Home</a></li>
            <li class="active">Shop Cart</li>
        </ul>
    </div>
</div>


<div class="shop-cart py-120">
    <div class="container">
        <div class="shop-cart-wrapper">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Sub Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="cart-img">
                                        <a asp-action="Detail" asp-controller="Accessories" asp-route-id="@item.Id"><img src="~/Images/Accessories/Single/@item.ImageSingle" alt="@item.Name"></a>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Accessories" asp-route-id="@item.Id"><h5>@item.Name</h5></a>
                                </td>
                                <td>
                                    <div class="cart-price">
                                        <span>$@item.Price</span>
                                    </div>
                                </td>

                                <td>
                                    <div class="cart-qty">
                                        <button type="button" class="minus-btn"><i class="fal fa-minus"></i></button>
                                        <input class="quantity" name="quantity" type="text" value="@item.Quantity" min="1">
                                        <button type="button" class="plus-btn"><i class="fal fa-plus"></i></button>
                                    </div>
                                </td>

                                <td>
                                    <div class="cart-sub-total">
                                        <span>$@item.Total</span>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="RemoveCart" asp-controller="CartAccessoriesItem" asp-route-id="@item.Id" class="cart-remove"><i class="far fa-times"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="cart-footer">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <div class="cart-coupon">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Coupon Code">
                                <button class="coupon-btn" type="submit">Apply <i class="fas fa-arrow-right-long"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-8">
                        <div class="cart-summary">
                            <ul>
                                <li><strong>Sub Total:</strong> <span>$@Model.Sum(p=>p.Total)</span></li>
                                <li><strong>Discount:</strong> <span>$0</span></li>
                                <li class="cart-total"><strong>Total:</strong> <span>$@Model.Sum(p=>p.Total)</span></li>
                            </ul>
                            <div class="text-end mt-40">
                                <a asp-action="Checkout" asp-controller="CartAccessoriesItem" class="theme-btn">Checkout Now<i class="fas fa-arrow-right-long"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}